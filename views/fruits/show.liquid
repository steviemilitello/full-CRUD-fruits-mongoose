{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <article>
            <h2>
                {{ fruit.name }} - 
                {% if fruit.readyToEat %}
                    Ready to Eat
                {% else %}
                    Not Ready to Eat
                {%endif%}
            </h2>
            <h3>{{ fruit.color }}</h3>
            <div class="btn-group">
                <a href="/fruits/{{ fruit.id }}/edit" class="btn btn-primary">Edit</a>
                <form action="/fruits/{{ fruit.id }}?_method=DELETE" method="POST">
                    <input type="submit" value="Delete that Froot" class="btn btn-danger">
            </div>
        </article>
    </div>
{% endblock %}