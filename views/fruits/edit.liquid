{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">  
        <form action="/fruits/{{ fruit.id }}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit New Fruit</legend>
                    <label class="form-label">Name:</label>
                    <input
                        type="text"
                        name="name"
                        placeholder="enter fruit name"
                        class="form-control"
                        value="{{ fruit.name }}"
                    >
                    <label class="form-label" >Color:</label>
                    <input
                        type="text"
                        name="color"
                        placeholder="enter fruit color"
                        class="form-control"
                        value="{{ fruit.color }}"
                    >
                    <label class="form-label"></labelclass> Ready To Eat:</label>
                    <input
                        type="checkbox"
                        class="form-check-input"
                        name="readyToEat"
                        {% if fruit.readyToEat %}
                            checked
                        {% endif %}
                    >
                
            </fieldset>
            <input
                type="submit"
                class="btn btn-sucess"
                value="Edit {{ fruit.name }}"
            >
        </form>
    </div>
{% endblock %}