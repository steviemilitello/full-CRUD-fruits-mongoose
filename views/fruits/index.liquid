<!-- serving block in layout.liquid -->
<!-- so we need to inform all our block (files) -->
{% layout 'layout.liquid' %}
<!-- start block content -->
{% block content %}
    <div>
        <a href="/fruits/new">Create a new Fruit</a>
        {% for fruit in fruits %}
            <article>
                <a href="/fruits/{{ fruit.id }}">
                    <h2>
                        {{ fruit.name }}
                        {% if fruit.readyToEat %}
                            Ripe
                        {% else %}
                            Not Ripe
                        {% endif %}
                    </h2>
                </a>
            </article>
        {% endfor %}
    </div>
{% endblock %}